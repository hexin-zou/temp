<configuration debug="false" scan="true" scanPeriod="60 seconds">
    <!-- Context listeners -->
    <contextListener class="io.seata.server.logging.listener.SystemPropertyLoggerContextListener" />
    <!-- common properties -->
    <springProperty name="PORT" defaultValue="7091" source="server.port" />
    <springProperty name="APPLICATION_NAME" defaultValue="seata-server" source="spring.application.name" />

    <!-- 日志存放路径 -->
    <property name="log.path" value="logs/${project.artifactId}" />
    <!-- 日志输出格式 -->
    <property name="console.log.pattern"
        value="%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{36}%n) - %msg%n" />

    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${console.log.pattern}</pattern>
            <charset>utf-8</charset>
        </encoder>
    </appender>

    <include resource="logback-common.xml" />

    <include resource="logback-logstash.xml" />

    <!-- 开启 skywalking 日志收集 -->
    <include resource="logback-skylog.xml" />

    <root level="INFO">
        <appender-ref ref="console" />
    </root>
</configuration>
